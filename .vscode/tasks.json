{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start project (install + dev)",
      "type": "shell",
      "command": "npm run start:dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "",
          "endsPattern": "Local:"
        }
      }
    }
  ]
}
